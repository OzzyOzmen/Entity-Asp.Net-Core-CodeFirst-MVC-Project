@using OzzyEntityLibraries.Services
@using OzzyEntityLibraries.DTO.Models
@model AllUsersDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="login-wrap">
    <div class="login-content">
        <div class="login-logo">
            <a href="#">
                <img src="images/icon/logo.png" alt="CoolAdmin">
            </a>
        </div>
        <div class="login-form">
            <form action="" method="post">
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input class="au-input au-input--full" type="text" name="UserName" placeholder="Kullanici Adı">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="au-input au-input--full" type="password" name="UserPassword" placeholder="Parola">
                </div>

                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Giriş Yap</button>

            </form>

        </div>
    </div>
</div>
	